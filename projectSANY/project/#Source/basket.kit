<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Document</title>
	<link rel="stylesheet" href="../css/style.css">
</head>
<body>

	<!-- @import "header.kit" -->

	<div class="container">
		<div class="basket">
			<div class="basket-title">Your Shopping Basket</div>

			<div class="basket__status">
				<div class="basket__status-items">Items</div>
				<div class="basket__status-class"></div>
					<div class="basket__status-properties">Price</div>
					<div class="basket__status-properties">Qty</div>
					<div class="basket__status-properties">Subtotal</div>
			</div>

			<div class="basket__item">
				<div class="basket__item-img"></div>
				<div class="basket__item-title">LEGO Superheroes Mighty Micros: Nightwing Vs. The Joker (75093)</div>
				<div class="basket__item-price">$8.99</div>
				<div class="basket__item__qty">
					<a href="#" class="basket__item__qty-Btn">-</a>
					<input type="number" class="basket__item__qty-input">
					<a href="#" class="basket__item__qty-Btn">+</a>
				</div>
				<div class="basket__item-subtotal">$17.98</div>
				<a class="basket__item-exitBtn"></a>
			</div>

			<div class="basket__status">
				<div class="basket__status-items">Items</div>
				<div class="basket__status-class2"></div>
					<div class="basket__status-properties">Basket Subtotal:</div>
					<div class="basket__status-price">$17.98</div>
			</div>

			<div class="basket__btn">
				<a href="#" class="basket__btn-continue">CONTINUE SHOPPING</a>
				<a href="#" class="basket__btn-pay">PAY</a>
			</div>
		</div>
	</div>

		<!-- @import "footer.kit" -->

</body>
</html>